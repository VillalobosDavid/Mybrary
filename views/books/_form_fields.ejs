<!-- Author Input Fields file to be shared by Author Views -->
<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= book.title %>">
    </div>
    <div class="form-item">
        <label for="author">Author</label>
        <select name="author" id="author">
            <% authors.forEach((author) => { %>
            <% if (author.id === book.author) { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>">
                <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>">
                <% } %>
                <% }); %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label for="publishDate">Publish Date</label>
        <input type="date" name="publishDate" id="publishDate"
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
        <label for="pageCount">Page Count</label>
        <input type="number" min="1" name="pageCount" id="pageCount" value="<%= book.pageCount %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover">Cover</label>
        <!-- Added class "filepond" in order for element to get recognized by "FilePond" -->
        <input type="file" name="cover" id="cover" class="book-cover filepond">
    </div>
    <div class="form-item">
        <label for="description">Description</label>
        <textarea name="description" id="description"><%= book.description %></textarea>
    </div>
</div>